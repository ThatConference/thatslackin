version: '3'

services:
  thatslackin:
    container_name: thatslackin
    image: thatconference/thatslackin:latest
    build:
      context: .
      dockerfile: Dockerfile
    env_file: .env
    environment:
      PORT: 80
      NODE_ENV: production
    ports:
      - 80:80
    command: sh -c "node server.js"
